// Development layout for coding with Claude Code
// Usage: zellij --layout dev
//   or:  zdev [session-name]

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    // Main development tab
    tab name="code" focus=true {
        pane split_direction="vertical" {
            // Editor pane (larger)
            pane size="70%" {
                name "editor"
                command "nvim"
                args "."
            }
            // Claude Code pane
            pane size="30%" {
                name "claude"
                command "claude"
            }
        }
    }

    // Git operations tab
    tab name="git" {
        pane {
            name "lazygit"
            command "lazygit"
        }
    }

    // Terminal tab (general purpose)
    tab name="term" {
        pane {
            name "terminal"
        }
    }
}

