// Claude Code focused layout
// Usage: zellij --layout claude
//
// Simple 2-pane layout optimized for Claude + Neovim workflow
// - Left: your terminal (for nvim, git, etc.)
// - Right: Claude Code

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="status-bar"
        }
    }

    tab name="main" focus=true {
        pane split_direction="vertical" {
            // Main working pane - you decide what to run
            pane size="65%" {
                name "work"
                focus true
            }
            // Claude pane
            pane size="35%" {
                name "claude"
            }
        }
    }
}


